<p id="notice"><%= notice %></p>


<h1><%= t('mining_type.title') %></h1>

<table border="1px">
  <thead>
    <tr>
      <th width="140px"><%= t('mining_type.description') %></th>
      <th width="140px"><%= t('mining_type.acronym') %></th>
      <th width="240px" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.destroy'), mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

